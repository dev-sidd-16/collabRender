<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:opencv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.siddprakash.collabar.MainActivity">


    <org.opencv.android.JavaCameraView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone"
        android:id="@+id/java_camera_view"
        opencv:show_fps="true"
        opencv:camera_id="any"
        />


    <Button
        android:id="@+id/btnCap"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="15dp"
        android:onClick="OKClicked"
        android:text="Capture" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sample_text"
        android:textColor="@color/brightGreen"
        android:layout_alignParentRight="true"
        android:layout_alignRight="@+id/java_camera_view"
        android:text="@string/app_name" />

    <android.opengl.GLSurfaceView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:id="@+id/my_surface_view"/>
    <!--android:layout_marginLeft="25dp"-->




</RelativeLayout>
